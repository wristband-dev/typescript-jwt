{
  "name": "@wristband/typescript-jwt",
  "description": "A framework-agnostic Typescript SDK that validates JWT access tokens issued by Wristband for user or machine authentication.",
  "author": "Wristband",
  "version": "0.2.2",
  "license": "MIT",
  "private": false,
  "homepage": "https://wristband.dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:wristband-dev/typescript-jwt.git"
  },
  "bugs": {
    "email": "support@wristband.dev"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.6.0"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js", 
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && rollup -c",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js --ext .ts",
    "lint:fix": "eslint . --ext .js --ext .ts --fix",
    "package": "npm run build && npm pack",
    "prepublishOnly": "pinst --disable",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "test": "jest --no-cache --runInBand",
    "test:coverage": "jest --coverage --no-cache --runInBand"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/eslint": "^8.56.12",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "pinst": "^3.0.0",
    "rollup": "^4.44.1",
    "rollup-plugin-dts": "^6.2.1",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "wristband",
    "authentication",
    "openid connect",
    "oidc",
    "oauth2",
    "multi tenant",
    "multi-tenant",
    "b2b",
    "m2m",
    "machine-to-machine",
    "jwt",
    "jwks",
    "token",
    "typescript"
  ]
}
